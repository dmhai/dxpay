        </li>
    </ul>
</section>
<script>
			$(".cntus-box").find("li").each(function(i){
				$(this).click(function(){
					$(".cntus-box").find("img").each(function(j){
					    $(this).attr("src", "/mobile/images/cnt_us_" + (j + 1) + "_1.png");
					});
					var src = $(this).find("img").attr("src");
					src = src.replace("/mobile/images/cnt_us_", "");
					src = src.replace(".png","");
					if(src.length==3){
					    $(this).find("img").attr("src", "/mobile/images/cnt_us_" + parseInt(src) + ".png");
					}
				});
			});

</script>


