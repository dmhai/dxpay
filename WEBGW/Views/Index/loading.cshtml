
@{
    ViewBag.Title = "loading";
}

<meta charset="utf-8">
<title>提示</title>
<style type="text/css">
    /*加载*/
    * {
        margin: 0px;
        padding: 0px;
    }

    .layer-fixed-wihte {
        position: fixed;
        _position: absolute;
        top: 0;
        left: 0;
        z-index: 1001;
        width: 100%;
        height: 100%;
        background: #fff;
        opacity: 0.5;
        filter: alpha(opacity=50);
    }

    .wp-layer {
        position: fixed;
        _position: absolute;
        top: 50%;
        left: 50%;
        z-index: 1002;
        margin-top: -120px;
        margin-left: -70px;
        border-radius: 5px;
        width: 400px;
    }

        .wp-layer img {
            width: 150px;
            height: 150px;
        }

    p {
        font-size: 14px;
        font-family: 'Microsoft YaHei';
    }
</style>

<body>

    <div class="layer-fixed"></div>
    <div class="wp-layer">
        <img src="~/images/loading.gif" alt="加载" />
        <p>请更换到ie8以上的浏览器浏览网站</p>
    </div>
    <!--加载 end-->

    <script src="js/jquery-1.8.1.min.js"></script>
    <script type="text/javascript">
        var DEFAULT_VERSION = "8.0";
        var ua = navigator.userAgent.toLowerCase();
        var isIE = ua.indexOf("msie")>-1;
        var safariVersion;
        if(isIE){
            safariVersion =  ua.match(/msie ([\d.]+)/)[1];
            if(safariVersion <= DEFAULT_VERSION ){
                location.href = "../Index/loading";
            }else{
                location.href = "../Index/Index";
	        }
        }
    </script>
</body>