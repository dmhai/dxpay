                        <option value="1" @(ViewBag.platformid == 1 ? "selected='selected'" : "")>安卓</option>
                        <option value="2" @(ViewBag.platformid == 2 ? "selected='selected'" : "")>苹果</option>
                        <option value="3" @(ViewBag.platformid == 3 ? "selected='selected'" : "")>H5</option>
                    </select>
