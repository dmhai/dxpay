                                        <input type="checkbox" name="child" class="checkall" @((!string.IsNullOrEmpty(appstr) && appstr.Contains("," + item.a_id.ToString() + ",")) ? " checked=\"checked\"" : "") value="@item.a_id" />
                                    </td>
                                    <td>@item.a_id</td>
                                    <td>@item.a_name</td>
                                    <td>@item.u_realname</td>
                                    <td>
                                        @{switch (item.a_platform_id)
                                            {
                                                case 1:
                                                    <label>安卓</label>
                                                    break;
                                                case 2:
                                                    <label>苹果</label>
