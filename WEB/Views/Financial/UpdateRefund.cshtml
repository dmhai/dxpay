@{
    ViewBag.Title = "修改退款申请";
    Layout = "~/Views/UI/dialog.cshtml";
    var model = ViewBag.model as JMP.MDL.jmp_refund;
}
@JMP.TOOL.UserHelper.js("Financial/RefundList.js")
@JMP.TOOL.UserHelper.js("my97datepicker/WdatePicker.js")

<div class="main">
    <div class="clear10"></div>
    <div class="plate-form">
        <dl>
            <dt>退款人姓名：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputName" type="text" id="r_name" onblur="yzname()" maxlength="20" sucmsg="验证成功" nullmsg="退款人姓名不超过20" errormsg="退款人姓名长度不超过20"  value="@(string.IsNullOrEmpty(model.r_name) ? "" : model.r_name)"  />
                    <span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="nameyy">*应用名长度不超过20</div>
            </dd>
        </dl>
        <dl>
            <dt>退款人电话：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="r_tel" type="text" id="r_tel" onblur="CheckPhone()" value="@(string.IsNullOrEmpty(model.r_tel) ? "" : model.r_tel)" />
                </div>
                <div class="Validform_checktip" id="u_phone_tip">*11位手机号或固定电话(号码或区号-号码)！</div>
            </dd>
        </dl>
        <dl>
            <dt>所属应用：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="r_appname" type="text" id="r_appname" readonly="readonly" onclick="shyy()" value="@(string.IsNullOrEmpty(model.a_name) ? "" : model.a_name)" /><span class="ie7-input-bug-end"></span>
                    <input type="hidden" id="r_appid" name="r_appid" />
                </div>
                <div class="Validform_checktip" id="yzkfz">* 请选择应用</div>
            </dd>
        </dl>
        <dl>
            <dt>所属商户：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="a_user_idyx" type="text" id="a_user_idyx" readonly="readonly" value="@(string.IsNullOrEmpty(model.u_realname) ? "" : model.u_realname)"  /><span class="ie7-input-bug-end"></span>
                    <input type="hidden" id="a_user_id" name="a_user_id" value="@(model.u_id == 0 ? 0 : model.u_id)" />
                </div>
               
            </dd>
        </dl>
        <dl>
            <dt>支付流水号：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="r_tradeno" type="text" id="r_tradeno" onblur="CheckTradeno()"  value="@(string.IsNullOrEmpty(model.r_tradeno) ? "" : model.r_tradeno)" />
                </div>
                <div id="yztradeno" class="Validform_checktip">*必填，请输入支付流水号！</div>
            </dd>
        </dl>
        <dl>
            <dt>订单编号：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="r_code" type="text" id="r_code" onblur="CheckCode()" value="@(string.IsNullOrEmpty(model.r_code) ? "" : model.r_code)" />
                </div>
                <div id="yztraCode" class="Validform_checktip">*必填，请输入订单编号！</div>
            </dd>
        </dl>
        <dl>
            <dt>实际支付金额：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="r_money" type="text" id="r_money" onblur="CheckMoney()" value="@(model.r_money)" />
                </div>
                <div id="yztraMoney" class="Validform_checktip">*必填，请输入实际支付金额！</div>
            </dd>
        </dl>
        <dl>
            <dt>退款金额：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="r_price" type="text" id="r_price" onblur="CheckPrice()" value="@(model.r_price)" />
                </div>
                <div id="yztrPrice" class="Validform_checktip">*必填，请输入退款金额！</div>
            </dd>
        </dl>
        <dl>
            <dt>用户付费时间：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="stime" type="text" id="r_date"  onFocus="WdatePicker({maxDate:'@DateTime.Now.ToString("yyyy-MM-dd")'})" readonly="readonly" value="@(model.r_date.ToString("yyyy-MM-dd"))" />

                </div>

            </dd>
        </dl>
        <input type="hidden" id="r_id" value="@(model.r_id == 0 ? 0 : model.r_id)" />
        <input type="hidden" id="r_time" value="@(model.r_time == DateTime.Now ? DateTime.Now : model.r_time)" />
        <input type="hidden" id="r_static" value="@(model.r_static == 0 ? 0 : model.r_static)" />
    </div>
</div>
<div class="page-footer" style="width: 100%;">
    <div class="btn-listbtn">
        <input type="button" name="btnSave" value="保存" id="btnSaveUpdateApp" class="btn btn-primary" />
        <input name="btnReturn" type="reset" onclick="btnCodesc()" value="取消" class="btn yellow" />
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript">
    //界面加载完成之后执行
    $(document).ready(function () {

    })
</script>
