@{
    ViewBag.Title = "添加本地管理员";
    Layout = "~/Views/UI/dialog.cshtml";
}
@JMP.TOOL.UserHelper.js("local/locals.js")
@JMP.TOOL.UserHelper.js("Authentication.js")
<div class="main">
    <div class="plate-form">
        <dl>
            <dt>用户角色：</dt>
            <dd>
                <div class="rule-single-select mr10">
                    <select name="selrole_id" id="selrole_id">
                        @Html.Raw(ViewBag.strHtml)
                    </select>
                </div>
            </dd>
        </dl>
        <dl>
            <dt>状态：</dt>
            <dd id="radOrvActnS">
                <label for="radOrvActnS_0"><input id="radOrvActnS_0" type="radio" name="state" value="1" checked="checked" />开启</label>
                <label for="radOrvActnS_1"><input id="radOrvActnS_1" type="radio" name="state" value="0" />关闭</label>
                <input name="inputUid" type="hidden" id="inputUid" value="0" />
            </dd>
        </dl>
        <dl>
            <dt>登录名：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputName" type="text" id="inputName" maxlength="20" value="" onblur="inputCheckName()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="checkName">* 登录名不能重复</div>
            </dd>
        </dl>
        <dl>
            <dt>密码：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputPwd" type="password" id="inputPwd" maxlength="20" value="" onblur="inputPwdChange()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="inputPwdtext">* 密码不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>确认密码：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputPwdTrue" type="password" id="inputPwdTrue" maxlength="20" onblur="inputPwdChange2()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="inputPwd2text">* 确认密码不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>真实姓名：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputRealname" type="text" id="inputRealname" value="" onblur="inputCheckRealName()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="checkRealName">* 真实姓名不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>部门：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputDepartment" type="text" id="inputDepartment" value="" onblur="inputCheckDep()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="checkDep">* 部门不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>职位：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="inputPosition" type="text" id="inputPosition" value="" onblur="inputCheckPos()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="checkPos">* 职位不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>手机号码：</dt>
            <dd>
             <div class="single-input normal">
                 <span class="ie7-input-bug-start"></span>
                 <input name="mobilenumber" type="text" id="mobilenumber" value="" onblur="Checkmobilenumber()" /><span class="ie7-input-bug-end"></span>
             </div>
                <div class="Validform_checktip" id="Checkmobilenumber">* 手机号码不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>邮箱地址：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="emailaddress" type="text" id="emailaddress" value="" onblur="Checkemailaddress()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="Checkemailaddress">* 邮箱地址不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>QQ:</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="qq" type="text" id="qq" value="" onblur="Checkqq()" /><span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="Checkqq">* qq不能为空</div>
            </dd>
        </dl>
    </div>
</div>
<div class="page-footer" style="width: 100%;">
    <div class="btn-listbtn">
        <input type="button" name="btnSave" value="保存" id="btnSave" class="btn btn-primary" onclick="addlcoaluser()" />
        <input name="btnReturn" type="reset" onclick="btnCodesc()" value="取消" class="btn yellow" />
    </div>
    <div class="clear"></div>
</div>
