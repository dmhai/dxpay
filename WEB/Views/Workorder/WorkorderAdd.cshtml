@{
    ViewBag.Title = "添加工单";
    Layout = "~/Views/UI/dialog.cshtml";
}
@JMP.TOOL.UserHelper.js("Workorder/Workorder.js")

<div class="main">
    <div class="plate-form">
        <dl>
            <dt>值班者：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="watchIdsOfTheDayname" type="text" id="watchIdsOfTheDayname" readonly="readonly" value="@(ViewBag.name)" /><span class="ie7-input-bug-end"></span>
                    <input type="hidden" id="watchIdsOfTheDay" name="watchIdsOfTheDay" value="@(ViewBag.id)" />
                    <span class="ie7-input-bug-end"></span>
                </div>
            </dd>
        </dl>
        <dl>
            <dt>工单标题：</dt>
            <dd>
                <div class="single-input normal">
                    <input name="title" type="text" id="title" onblur="yztitle()" @(ViewBag.id == 0 ? "readonly='readonly'" : "") value="" />
                </div>
                <div id="yztitle" class="Validform_checktip">*请输入工单标题！</div>
            </dd>
        </dl>
        <dl>
            <dt>工单类别：</dt>
            <dd>
                <div class="rule-single-select">
                    <select name="catalog" id="catalog" @(ViewBag.id == 0 ? "disabled='disabled'" : "")>
                        <option value="0">紧急问题</option>
                        <option value="1">功能需求</option>
                    </select>
                </div>
            </dd>
        </dl>
        <dl>
            <dt>工单内容：</dt>
            <dd>
                <div class="date-tool-input mr10">
                    <div class="date-tool-input-text">
                        <textarea name="content" type="text" id="content" class="txt1" onblur="yzcontent()" @(ViewBag.id == 0 ? "readonly='readonly'" : "")> </textarea>
                    </div>
                    <div id="yzcontent" class="Validform_checktip">*请输入工单内容！</div>
                </div>
            </dd>
        </dl>
    </div>
</div>
<div class="page-footer" style="width: 100%;">
    <div class="btn-listbtn">
        <input type="button" name="btnSave" value="提交" id="AddWorkorder" class="btn btn-primary" />
        <input name="btnReturn" type="reset" onclick="btnCodesc()" value="取消" class="btn" />
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript">
    //界面加载完成之后执行
    $(document).ready(function () {
        var id = '@ViewBag.id';
        if (id == 0) {
            layer.alert('目前没有安排值班人，请与技术部联系')

        }
    })
</script>
