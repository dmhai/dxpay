        <dl>
            <dt>支付类型名称：</dt>
            <dd>
                <div class="single-input normal">
                    <span class="ie7-input-bug-start"></span>
                    <input name="PaymodeName" type="text" id="PaymodeName" onblur="yzPaymodeName()" readonly="readonly" maxlength="20" value="@(string.IsNullOrEmpty(mode.p_name) ? "" : mode.p_name)" />
                    <span class="ie7-input-bug-end"></span>
                </div>
                <div class="Validform_checktip" id="PaymodeNameYz">*支付类型名称长度不超过20</div>
            </dd>
        </dl>
        <dl>
            <dt>
                <input type="hidden" id="paymodeid" value="@(mode.p_id == 0 ? 0 : mode.p_id)" /></dt>
        </dl>
