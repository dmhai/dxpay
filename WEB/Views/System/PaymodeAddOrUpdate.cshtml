@{
    ViewBag.Title = "添加或修改支付类型";
    Layout = "~/Views/UI/dialog.cshtml";
    var mode = ViewBag.mode as JMP.MDL.jmp_paymode;
}
@JMP.TOOL.UserHelper.js("System/Paymode.js")
