@{
    ViewBag.Title = "详情";
    var archivelist = ViewBag.archivelist as System.Data.DataTable;
}
@{
    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
        <thead>
            <tr>
                @{
                    for (int i = 0; i < archivelist.Columns.Count; i++)
                    {
                        <th>@archivelist.Columns[i].ColumnName</th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < archivelist.Rows.Count; i++)
                {
                    <tr>
                        @for (int k = 0; k < archivelist.Columns.Count; k++)
                        {
                            if (k == (archivelist.Columns.Count - 1))
                            {
                                <td>@(archivelist.Columns[k].ColumnName != "应用名称" && string.IsNullOrEmpty(archivelist.Rows[i][archivelist.Columns[k].ColumnName].ToString()) ? 0 : archivelist.Rows[i][archivelist.Columns[k].ColumnName]) %</td>
                            }
                            else
                            {

                                <td>@(archivelist.Columns[k].ColumnName != "应用名称" && string.IsNullOrEmpty(archivelist.Rows[i][archivelist.Columns[k].ColumnName].ToString()) ? 0 : archivelist.Rows[i][archivelist.Columns[k].ColumnName])</td>
                            }
                        }
                    </tr>
                }

            }

        </tbody>
    </table>
}