@{
    ViewBag.Title = "更新权限";
    Layout = "~/Views/UI/dialog.mobile.cshtml";
    var data = ViewBag.m_limit as JMP.MDL.jmp_limit;
}
@JMP.TOOL.UserHelper.js("mobile/local/locals.mobile.js")
<div class="mobile-popup mobile-container">
    <div class="ui form">
        <input name="inputLid" type="hidden" id="inputLid" value="@data.l_id" />
        <dl>
            <dt>权限从属：</dt>
            <dd>
                <select name="sellimit_id" id="sellimit_id" onchange="updateLimitTopid()" class="ui dropdown fluid fluid-block">
                    @Html.Raw(ViewBag.selectTopid)
                </select>
            </dd>
        </dl>
        <dl>
            <dt>状态：</dt>
            <dd id="radOrvActnS">
                <label for="radOrvActnS_0"><input id="radOrvActnS_0" type="radio" name="state" value="1" @(data.l_state == 1 ? "checked=checked" : "") />开启</label>
                <label for="radOrvActnS_1"><input id="radOrvActnS_1" type="radio" name="state" value="0" @(data.l_state == 0 ? "checked=checked" : "") />关闭</label>
            </dd>
        </dl>
        <dl>
            <dt>权限名称：</dt>
            <dd>
                <input name="inputName" type="text" id="inputName" value="@data.l_name" onblur="changeName()" />
                <div class="Validform_checktip" id="checkName">* 权限名称不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>权限页面：</dt>
            <dd>
                <input name="inputUrl" type="text" id="inputUrl" value="@data.l_url.Split(',')[0]" onblur="changeUrl()" />
                <div class="Validform_checktip" id="checkUrl">* 权限页面不能为空</div>
            </dd>
        </dl>
        @Html.Raw(ViewBag.topid2HtmlVoid)
        <dl>
            <dt>排序：</dt>
            <dd>
                <input name="inputValue" type="text" id="inputValue" value="@data.l_sort" onblur="changeValue()" />
                <div class="Validform_checktip" id="checkValue">* 权限值不能为空</div>
            </dd>
        </dl>
        <dl>
            <dt>图标样式：</dt>
            <dd>
                <input name="inputIcnn" type="text" id="inputIcnn" value="@data.l_icon" />
            </dd>
        </dl>
    </div>
    <div class="page-footer">
        <div class="btn-listbtn">
            <input type="button" name="btnSave" value="保存" id="btnSave" class="btn btn-primary" onclick="updatelimits(@data.l_id)" />
            <input name="btnReturn" type="reset" onclick="btnCodesc()" value="取消" class="btn yellow" />
        </div>
        <div class="clear"></div>
    </div>
</div>
