@{
    ViewBag.Title = "应用信息";
    Layout = "~/Views/UI/master.cshtml";
    var mo = ViewBag.modapp as JMP.MDL.jmp_app;

    string[] pay = ViewBag.pay;
}

<header class="page-tit">
    <i class="fa fa-bars btn-nav" title="导航"></i>
    <span class="tit">应用详细信息</span>
</header>
<!--头部 end-->
<section class="real">
    <ul class="frm-ul">
        <li class="tit">
            <p class="tcnt">应用信息</p>
        </li>
        <li>
            <div class="dbor">

                <p class="ptit"><span style="color: #ff0000">*</span>  应用编号</p>
                @(mo.a_id)
            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"> <span style="color: #ff0000">*</span> 应用名称</p>
                @(string.IsNullOrEmpty(mo.a_name) ? "" : mo.a_name)

            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"> <span style="color: #ff0000">*</span> 运行平台</p>
                @(string.IsNullOrEmpty(mo.p_name) ? "" : mo.p_name)

            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"> <span style="color: #ff0000">*</span> 应用key</p>
                @(string.IsNullOrEmpty(mo.a_key) ? "" : mo.a_key)<br />
                <span style="color:blue"> 备注：支付SDK使用</span>

            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"> <span style="color: #ff0000">*</span>应用秘钥</p>
                @(string.IsNullOrEmpty(mo.a_secretkey) ? "" : mo.a_secretkey)<br />
                <span style="color:blue">  备注：通知接口使用</span>

            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"> <span style="color: #ff0000">*</span>通知地址</p>
                @(string.IsNullOrEmpty(mo.a_notifyurl) ? "" : mo.a_notifyurl)
            </div>
        </li>
        @if (mo.p_name.Trim() == "H5")
        {
            <li>
                <div class="dbor">
                    <p class="ptit"> <span style="color: #ff0000">*</span>同步通知地址</p>
                    @(string.IsNullOrEmpty(mo.a_showurl) ? "" : mo.a_showurl)
                </div>
            </li>
        }
    </ul>

    <ul class="frm-ul app-frm-buy">
        <li class="tit">
            <p class="tcnt">支付方式</p>
        </li>
        @if (pay.Length > 0)
        {
            for (int i = 0; i < pay.Length; i++)
            {
                switch (pay[i])
                {
                    case "支付宝":
                        <li>
                            <i class="icon icon2"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "微信":
                        <li>
                            <i class="icon icon3"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "银联":
                        <li>
                            <i class="icon icon1"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "微信公众号":
                        <li>
                            <i class="icon icon3"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "微信APP":
                        <li>
                            <i class="icon icon3"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "微信扫码":
                        <li>
                            <i class="icon icon3"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "支付宝扫码":
                        <li>
                            <i class="icon icon2"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                    case "QQ钱包":
                        <li>
                            <i class="icon icon5"></i>
                            <span class="name">@pay[i]</span>
                        </li>
                        break;
                }
            }
        }
    </ul>

    <div class="frm-btn">
        <a class="btn" id="btnyy" onclick="back()">返回</a>
    </div>
</section>
<script>
    function  back()
    {
     window.location.href = "/App/AppList";
    }

</script>
