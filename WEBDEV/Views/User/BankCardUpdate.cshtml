@{
    ViewBag.Title = "编辑银行卡信息";
    Layout = "~/Views/UI/master.cshtml";

    var userBankMode = ViewBag.userBankMode as JMP.MDL.jmp_userbank;

}
@JMP.TOOL.UserHelper.js("plugin/JValidator.js")
@JMP.TOOL.UserHelper.js("user/BankCard.js")
<div class="rnatn-cnt">
    <input type="hidden" id="u_id" value="@(string.IsNullOrEmpty(userBankMode.u_id.ToString())?0:userBankMode.u_id)" />
    <ul class="rnatn-frm clearfix">
        <li class="tit">
            <p class="ptit">
                <i class="calr"></i>
                <span class="t">银行卡信息</span>
            </p>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">银行卡号</div>
                <div class="dipt">
                    <input type="text" name="u_banknumber" id="u_banknumber" value="@(string.IsNullOrEmpty(userBankMode.u_banknumber)?"":userBankMode.u_banknumber)" onblur="yz_banknumber()" class="txtipt" placeholder="请输入银行卡号" />
                </div>
                <span class="error" id="yz_banknumber"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">银行名称</div>
                <div class="dipt">
                    <input type="text" name="u_bankname" id="u_bankname" value="@(string.IsNullOrEmpty(userBankMode.u_bankname)?"":userBankMode.u_bankname)" onblur="yz_bankname()" class="txtipt" placeholder="请输入银行名称" />
                </div>
                <span class="error" id="yz_bankname"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">开户行名称</div>
                <div class="dipt">
                    <input type="text" name="u_openbankname" id="u_openbankname" value="@(string.IsNullOrEmpty(userBankMode.u_openbankname)?"":userBankMode.u_openbankname)" onblur="yz_openbankname()" class="txtipt" placeholder="请输入开户行名称" />
                </div>
                <span class="error" id="yz_openbankname"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">持卡人姓名</div>
                <div class="dipt">
                    <input type="text" name="u_name" id="u_name" value="@(string.IsNullOrEmpty(userBankMode.u_name)?"":userBankMode.u_name)" onblur="yz_name()" class="txtipt" placeholder="请输入持卡人姓名" />
                </div>
                <span class="error" id="yz_name"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">省份</div>
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_province" name="u_province"></select>
                    </div>
                </div>
                <span class="error" id="yz_province"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">城市</div>
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_area" name="u_area"></select>
                    </div>
                </div>
                <span class="error" id="yz_area"></span>
            </div>
        </li>
        <li>
            <i class="star fl">*</i>
            <div class="dpt fl">
                <div class="dtit">付款标识</div>
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_flag" name="u_flag">
                            <option value="0">-请选择-</option>
                            <option value="00" @(userBankMode.u_flag == "00" ? "selected=selected" : "")>对私</option>
                            <option value="01" @(userBankMode.u_flag == "01" ? "selected=selected" : "")>对公</option>
                        </select>
                    </div>
                </div>
                <span class="error" id="yz_flag"></span>
            </div>
        </li>
    </ul>
    <div class="div-btn">
        <a class="btn btn-primary" id="btnBankCard">提交审核</a>
    </div>
</div>
<script class="resources library" src="~/js/area.js" type="text/javascript"></script>
<script type="text/javascript">
    _init_area();
    shez();
    function shez() {
        $("#u_province").val("@userBankMode.u_province");
        change(1);
        $("#u_area").val("@userBankMode.u_area");
    }
</script>