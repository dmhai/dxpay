@{
    ViewBag.Title = "录入银行卡信息";
    Layout = "~/Views/UI/master.cshtml";
}
@JMP.TOOL.UserHelper.js("plugin/JValidator.js")
@JMP.TOOL.UserHelper.js("user/BankCard.js")
<script src="~/js/jquery.form.js"></script>
<div class="box_container">
    <div class="rnatn-cnt">
        <input type="hidden" id="u_id" value="" />
        <ul class="rnatn-frm clearfix">
            <li class="tit">
                <p class="ptit">
                    <i class="calr"></i>
                    <span class="t">银行卡信息</span>
                </p>

                <span style="float: right; margin-top: 15px;">
                    <a style="color:red; margin-right:5px;"> *所有的资料信息严格按照开户行信息填写,否则无法打款！</a>
                    <a class="btn btn-primary" href="~/files/downloads/银行卡模板.xlsx">下载模板</a>
                    <a class="btn btn-success" onclick="upload()">批量上传</a>
                </span>
            </li>

            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">银行卡号</div>
                    <div class="dipt">
                        <input type="text" name="u_banknumber" id="u_banknumber" onblur="yz_banknumber()" class="txtipt" placeholder="请输入银行卡号" />
                    </div>
                    <span class="error" id="yz_banknumber"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">银行名称</div>
                    <div class="dipt">
                        <input type="text" name="u_bankname" id="u_bankname" onblur="yz_bankname()" class="txtipt" placeholder="请输入银行名称" />
                    </div>
                    <span class="error" id="yz_bankname"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">开户行名称</div>
                    <div class="dipt">
                        <input type="text" name="u_openbankname" id="u_openbankname" onblur="yz_openbankname()" class="txtipt" placeholder="请输入开户行名称" />
                    </div>
                    <span class="error" id="yz_openbankname"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">持卡人姓名</div>
                    <div class="dipt">
                        <input type="text" name="u_name" id="u_name" onblur="yz_name()" class="txtipt" placeholder="请输入持卡人姓名" />
                    </div>
                    <span class="error" id="yz_name"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">省份</div>
                    <div class="dipt">
                        <div class="rule-singless-select">
                            <select id="u_province" name="u_province"></select>
                        </div>
                    </div>
                    <span class="error" id="yz_province"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">城市</div>
                    <div class="dipt">
                        <div class="rule-singless-select">
                            <select id="u_area" name="u_area"></select>
                        </div>
                        <script class="resources library" src="~/js/area.js" type="text/javascript"></script>
                        <script type="text/javascript">_init_area();</script>
                    </div>
                    <span class="error" id="yz_area"></span>
                </div>
            </li>
            <li>
                <i class="star fl">*</i>
                <div class="dpt fl">
                    <div class="dtit">付款标识</div>
                    <div class="dipt">
                        <div class="rule-singless-select">
                            <select id="u_flag" name="u_flag">
                                <option value="0">-请选择-</option>
                                <option value="00">对私</option>
                                <option value="01">对公</option>
                            </select>
                        </div>
                    </div>
                    <span class="error" id="yz_flag"></span>
                </div>
            </li>
        </ul>
        @{

            if (ViewBag.userBankCount < ViewBag.Bankcount)
            {
                <div class="div-btn">
                    <a class="btn btn-primary" id="btnBankCard">提交审核</a>
                </div>
            }
            else
            {
                <div class="div-btn">
                    <h1 style="color:red;font-size:20px;font-weight:bolder;">最多只能添加<label>@ViewBag.Bankcount</label>张银行卡！</h1>
                </div>
            }
        }
        <div style="height:400px;"></div>
    </div>

    </div>
    
    

