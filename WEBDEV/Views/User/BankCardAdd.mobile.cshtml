@{
    ViewBag.Title = "录入银行卡信息";
    Layout = "~/Views/UI/master.mobile.cshtml";
}

@JMP.TOOL.UserHelper.js("plugin/JValidator.js")
<script src="~/mobile/js/user/BankCard.js"></script>
<header class="page-tit">
    <i class="fa fa-bars btn-nav" title="导航"></i>
    <span class="tit">录入银行卡信息</span>
</header>
<!--头部 end-->
<section class="real">
    <input type="hidden" id="u_id" value="" />
    <ul class="frm-ul">
        <li class="tit">
            <p class="tcnt">银行卡信息</p>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>银行卡号</p>
                <input type="text" name="u_banknumber" id="u_banknumber" class="txtipt" placeholder="请输入银行卡号" />
            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>银行名称</p>
                <input type="text" name="u_bankname" id="u_bankname" class="txtipt" placeholder="请输入银行名称" />
            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>开户行名称</p>
                <input type="text" name="u_openbankname" id="u_openbankname" class="txtipt" placeholder="请输入开户行名称" />
            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>持卡人姓名</p>
                <input type="text" name="u_name" id="u_name" class="txtipt" placeholder="请输入持卡人姓名" />
            </div>
        </li>
        <li>  
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>省份</p>
                
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_province" name="u_province"></select>
                    </div>
                </div>
                <span class="error" id="yz_province"></span>
            </div>
        </li>
        <li>
            
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>城市</p>
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_area" name="u_area"></select>
                    </div>
                    <script class="resources library" src="~/js/area.js" type="text/javascript"></script>
                    <script type="text/javascript">_init_area();</script>
                </div>
                <span class="error" id="yz_area"></span>
            </div>
        </li>
        <li>
            <div class="dbor">
                <p class="ptit"><span style="color: #ff0000">*</span>付款标识</p>
                <div class="dipt">
                    <div class="rule-singless-select">
                        <select id="u_flag" name="u_flag">
                            <option value="0">-请选择-</option>
                            <option value="00">对私</option>
                            <option value="01">对公</option>
                        </select>
                    </div>
                </div>
                <span class="error" id="yz_flag"></span>
            </div>
        </li>
    </ul>
    <div class="frm-btn">
        <a class="btn" id="btnBankCard">提交审核</a>
    </div>

</section>

