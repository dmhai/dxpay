@{
    ViewBag.Title = "聚米支付平台-登录";
    Layout = "~/Views/UI/Account.cshtml";
}
@JMP.TOOL.UserHelper.js("home/login.js")

    <form class="lgn-frm">
        <ul class="lgn-frm-dc clearfix">
            <li>
                <span class="lgn-tit">用户名</span>
                <input type="text" title="邮箱或者手机号码" name="u_id" id="u_id" class="form-ctrl" value="346161071@qq.com"  placeholder="请输入邮箱或者手机号码"  onblur="yzzh()"/>
                <div id="yzzh" class="lgn-error ">用户名不能为空</div>
            </li>
            <li>
                <span class="lgn-tit">密码</span>
                <input type="password" name="u_pass" id="u_pass" class="form-ctrl form-ctl-pwd" value="123456" placeholder="请输入密码"  onblur="yzma()" />
                <div id="yzma" class="lgn-error">密码不能为空</div>
                <a href="/User/changepwd" class="forget-pwd-content">
                    <div  id="forget-pwd-hover" class="forget-pwd-hover">找回密码</div>
                </a>
            </li>
            <li>
                <span class="lgn-tit">验证码</span>
                <input type="text" id="code" class="form-ctrl form-ctl-vlte" placeholder="请输入验证码" value="11" onblur="yzcode()">
                <span id="lgn-code" class="lgn-code" onclick="document.getElementById('verify').src = '/Home/GetValidateCode?height=60&k=' + new Date().toString();">
                    <img id="verify" src="/Home/GetValidateCode?height=60" alt="看不清？换一张" title="看不清？换一张" />
                </span>
                <div id="yzcode" class="lgn-error lgn-ervlt">验证码不能为空</div>
            </li>
        </ul>
        <div class="dbtn">
            @*<a id="btn_sub1" class="lgn-btn" title="登录"><i class="icon-sj"></i></a>*@
            <a  id="btn_sub" class="lgn-btn on" title="登录" value="登录" ><i class="icon-sj"></i></a> 
            <a href="/User/Register" class="rgt">立即注册</a>
        </div>
    </form>
    <script type="text/javascript">

        //忘记密码
        $(".forget-pwd-content").hover(function(){
            $(".forget-pwd-hover").show(200);
        },function(){
            $(".forget-pwd-hover").hide(200);
        });

    </script>

