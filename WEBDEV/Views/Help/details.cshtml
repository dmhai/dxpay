@model WEBDEV.Models.Help.ArticleDetailsViewModel
@using WEBDEV.Extensions
@{
    Layout = "~/views/shared/_layout_helper_center.cshtml";
}
<div class="container">
    @Html.CreateDetailBreadCrumb(Model.SubCatalogId)
    <div class="row">
        <div class="col-lg-9 col-sm-9">
            <div class="help-details-wrap">
                <article>
                    <h1>@Model.Title</h1>
                    <div class="content">
                        @(Html.Raw(string.IsNullOrEmpty(Model.Content) ? "" : Model.Content.Replace("/ueditor/net/upload/", "http://dxadm.dunxingpay.net/ueditor/net/upload/")))
                    </div>
                    <p class="publish-date">发表于 @Model.CreatedOn @(string.IsNullOrEmpty(Model.UpdatedOn) ? "" : "• 更新于 " + Model.UpdatedOn) </p>
                </article>
            </div>
        </div>
        <div class="col-lg-3 col-sm-3">
            @Html.Action("SideBarHotQuestion", "Help")
        </div>
    </div>
</div>