@model List<WEBDEV.Models.Help.ArticleListViewModel>
@using WEBDEV.Extensions
@{
    Layout = "~/views/shared/_layout_helper_center.cshtml";
}
<div class="container">
    @Html.CreateBreadCrumb(ViewContext)
    <div class="row">
        <div class="col-lg-2 col-sm-2 col-md-2 hidden-xs sidebar">
            @Html.CreateHelpMenu(ViewContext)
        </div>
        <div class="col-lg-10 col-sm-10 col-md-10">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="article-items">
                        <ul class="list-unstyled">
                            @if (Model !=null && Model.Count > 0)
                            {
                                foreach (var art in Model)
                                {
                                    <li class="help-search-item">
                                        <a href="~/@art.Href">
                                            <h4>@art.Title</h4>
                                        </a>
                                        <p><span class="gray">摘要: @art.Title</span></p>
                                        <p class="publish-date">发表于 @art.CreatedOn @(string.IsNullOrEmpty(art.UpdatedOn) ? "" : "• 更新于 " + art.UpdatedOn)</p>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="help-search-item">
                                    <p>还没有发布相关的帮助文章</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>