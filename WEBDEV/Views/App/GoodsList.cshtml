@{
    ViewBag.Title = "商品信息";
    var list = ViewBag.list as List<JMP.MDL.jmp_goods>;
}
@JMP.TOOL.UserHelper.css("base.css")
@JMP.TOOL.UserHelper.css("main.css")
@JMP.TOOL.UserHelper.js("jquery.js")
@JMP.TOOL.UserHelper.js("base.js")
@JMP.TOOL.UserHelper.js("plugin/JValidator.js")
@JMP.TOOL.UserHelper.js("App/Goods.js")
<style type="text/css">
    .controls label {
        margin-right: 70px;
    }

    .btns {
        text-align: right;
        margin-right: 9px;
    }

    .btn {
        margin: 0 10px 30px;
    }

    .form input.txtedit {
        width: 100px;
        line-height: 24px;
        height: 24px;
        float: none;
    }

        .form input.txtedit:focus {
            border-color: #598dd7;
            -webkit-box-shadow: inset 0 0 2px #c6d8f0;
            -moz-box-shadow: inset 0 0 2px #c6d8f0;
            box-shadow: inset 0 0 2px #c6d8f0;
        }

    .link {
        margin: 0 10px;
    }

    .add {
        font-size: 16px;
    }
</style>
<div class="box_container" id="iframeheight" style="height: 700px">
    <form class="form" id="form">
        <div style="padding: 30px;">
            <div style="float: left;">
                <h3 style="color: #7b849b;">应用名称：@(string.IsNullOrEmpty(ViewBag.appname) ? "" : ViewBag.appname)</h3>
            </div>
            <div style="text-align: right; float: right;">
                <input type="hidden" id="appid" value="@ViewBag.appid" />
                <input type="button" class="btn2" id="addsp" value="新增商品"></div>
        </div>
        <div class="datatable">
            <table cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th>商品编号</th>
                        <th>商品名称</th>
                        <th>销售方式</th>
                        <th>销售价格</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in list)
                        {
                        <tr>
                            <td>@item.g_id</td>
                            <td>
                                @item.g_name
                            </td>
                            <td>
                                @item.s_name
                            </td>
                            <td>
                                @String.Format("{0:N2}", item.g_price)
                            </td>
                            <td>
                                <div>
                                    <a class="link edit"  onclick="UpdateUser(@item.g_id)">编辑</a>
                                    <a class="link delete red" onclick="UpdateDelet(@item.g_id)">删除</a>
                                </div>
                            </td>
                        </tr>   
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="btns">
            <input type="hidden" id="listcount" value="@(list.Count > 0 ? list.Count : 0)" />
            @* <a class="btn btn_min btn_disabled" href="javascript:void(0)">上一步</a>*@
            <!--<a class="btn btn_min btn_orange" href="create.htm">上一步</a>-->
            <a class="btn btn_min" id="Goodslistbtn" href="javascript:void(0)">下一步</a>
            <!--<a class="btn btn_min btn_orange" href="pay.htm">下一步</a>-->
        </div>
    </form>
</div>
